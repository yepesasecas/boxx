<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  <div><br>
	  <%= f.email_field :email,placeholder: "Email", :autofocus => true, :class =>"form-control" %></div>

	  <div>
	  <%= f.password_field :password,placeholder: "Password", :class =>"form-control" %></div>
		<br>
	  <% if devise_mapping.rememberable? -%>
	    <div><%= f.check_box :remember_me %> <%= f.label "Recordarme" %></div>
	  <% end -%>	
	  <div><%= f.submit "Conectarse", :class=>"btn btn-primary" %></div>
	<% end %>
		<br>
	<%= render "devise/shared/links" %>